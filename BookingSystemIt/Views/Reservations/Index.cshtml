@model IEnumerable<BookingSystemIt.Models.Reservation>
@{
    ViewBag.Title = "Index";
}

<h2>Reservations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="table-container">
    <table id="reservation" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.City.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hotel.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DaysOfStaying)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HotelUrl)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.City.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hotel.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DaysOfStaying)
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.Price)
                        $
                    </td>
                    <td>
                        <img style="max-width:200px" src="@item.HotelUrl" />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ReservationId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ReservationId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ReservationId })
                    </td>
                </tr>

            }
        </tbody>

    </table>
</div>

@section Scripts{

    <script>

        $(document).ready(function () {
            $("#reservation").DataTable();
        });
    </script>
}
